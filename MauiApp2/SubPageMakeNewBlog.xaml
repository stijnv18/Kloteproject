<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.SubPageMakeNewBlog"
             >

    <VerticalStackLayout Spacing="15" Padding="20">
        <Label 
            Text="Blog titel:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name = "nameOfBlog"
               Placeholder = "Type the titel of the blog" />
        <Label 
            Text="Blog Text:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name = "textOfBlog"
               Placeholder = "Type the Text of the blog" />

        <Button x:Name = "submitBlog"
                Text = "Submit your blog"
                Clicked = "OnSubmitBlog"/>
		<Label x:Name="notifyApiStatusLabel" Text="" FontSize="10"/>
        <Label x:Name="TestStatusLabel" Text="" FontSize="10"/>
		
    </VerticalStackLayout>
    
</ContentPage>